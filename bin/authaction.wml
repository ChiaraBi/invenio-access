try:
    import sys
    sys.path.append('%s' % pylibdir)
    from cdsware.config import *
    from cdsware.access_control_engine import acc_authorize_action
except ImportError, e:
    print "Error: %s" % e
    import sys
    sys.exit(1)

def main():
    """CLI to acc_authorize_action. The function finds the needed
    arguments in sys.argv.
    If the number of arguments is wrong it prints help.
    Return 1 on success, 0 on failure. """
    
    alen, auth = len(sys.argv), 0

    # print help if wrong arguments
    if alen < 3 or alen % 2 == 0:
        print 'Access Control Engine - authorization'
        print 'Wrong number of arguments \n'
        print 'Usage: '
        print 'authaction id_user name_action keyword1 value1 keyword2 value2 ... \n'

        return 0

    # try to authorize
    else:
        # get values
        id_user = sys.argv[1]
        name_action = sys.argv[2]

        dict = {}
        for i in range(3, alen, 2):
            dict[sys.argv[i]] = sys.argv[i + 1]

        # run ace-function
        auth = acc_authorize_action(id_user, name_action, **dict)

    # print and return 
    print auth
    return auth


if __name__ == '__main__':
    main() 

